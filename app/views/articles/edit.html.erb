<!-- Navbar avec "Wikinimous" comme lien vers l'index et un bouton "New Article" -->
<div class="navbar bg-light p-3 d-flex justify-content-between align-items-center mb-4">
  <%= link_to "Wikinimous", articles_path, class: "navbar-brand fs-4 mb-0 text-decoration-none text-muted" %>
  <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
</div>

<!-- Titre de la page d'édition -->
<h1 class="text-center">Editing article</h1>

<!-- Formulaire d'édition de l'article -->
<div class="mx-auto" style="max-width: 600px;">
  <%= form_with(model: @article, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title, "Title", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :content, "Content", class: "form-label" %>
      <%= form.text_area :content, rows: 10, class: "form-control" %>
    </div>

    <%= form.submit "Update Article", class: "btn btn-primary" %>
  <% end %>

  <!-- Liens vers Show et Back -->
  <div class="mt-3">
    <%= link_to "Show", article_path(@article), class: "text-primary me-3" %> |
    <%= link_to "Back", articles_path, class: "text-primary ms-3" %>
  </div>
</div>
